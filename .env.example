# ── Database ──────────────────────────────────────────────────────────────────
DATABASE_URL="postgresql://USER:PASSWORD@HOST:5432/plato_network?sslmode=require"

# ── Auth.js v5 ────────────────────────────────────────────────────────────────
# Generate: openssl rand -base64 32
AUTH_SECRET="your-auth-secret-here"
AUTH_URL="http://localhost:3000"

# ── Email (Resend) ─────────────────────────────────────────────────────────────
RESEND_API_KEY="re_xxxxxxxxxxxx"
EMAIL_FROM="Plato Network <noreply@yourdomain.com>"

# ── Wallet / SIWE (Base mainnet chainId=8453) ──────────────────────────────────
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID="your-walletconnect-project-id"
NEXT_PUBLIC_DEFAULT_CHAIN_ID=8453
NEXT_PUBLIC_APP_NAME="Plato Network"
NEXT_PUBLIC_APP_DOMAIN="localhost"

# オプション: Base RPC URL (デフォルト: https://mainnet.base.org)
BASE_RPC_URL="https://mainnet.base.org"

# ── ネットワーク会費 (MetaMask払い) ───────────────────────────────────────────
# 会費の受取ウォレットアドレス (Base mainnet)
MEMBERSHIP_RECEIPT_ADDRESS="0xYourWalletAddressHere"
# 会費金額 (wei単位, 例: 0.01 ETH = 10000000000000000)
MEMBERSHIP_AMOUNT_WEI="10000000000000000"

# ── Admin ─────────────────────────────────────────────────────────────────────
ADMIN_EMAIL_BOOTSTRAP="admin@yourdomain.com"

# ── DM Encryption (AES-256-GCM) ───────────────────────────────────────────────
# Generate: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
DM_ENCRYPTION_KEY="your-32-byte-base64-key-here"

# ── Realtime (choose: pusher | ably) ──────────────────────────────────────────
REALTIME_PROVIDER="pusher"

# Pusher (if REALTIME_PROVIDER=pusher)
REALTIME_APP_ID="your-pusher-app-id"
REALTIME_KEY="your-pusher-key"
REALTIME_SECRET="your-pusher-secret"
REALTIME_CLUSTER="ap3"
NEXT_PUBLIC_REALTIME_KEY="your-pusher-key"

# Ably (if REALTIME_PROVIDER=ably)
# REALTIME_KEY="your-ably-api-key"
# NEXT_PUBLIC_REALTIME_KEY="your-ably-api-key"
